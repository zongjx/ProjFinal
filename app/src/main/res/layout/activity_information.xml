<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/header_info"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_info"
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="个人信息"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/photo_info"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"/>

        <TextView
            android:id="@+id/nickname_label_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/photo_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/nickname_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="昵称：   "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/nickname_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/photo_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/nickname_label_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="nickname"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/realname_label_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nickname_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/realname_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="姓名：   "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/realname_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nickname_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/realname_label_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="realname"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sex_label_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/realname_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sex_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="性别：   "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/sex_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/realname_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/sex_label_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="sex"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/campus_label_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sex_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/campus_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="学校：   "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/campus_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sex_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/campus_label_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="campus"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/phone_label_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/campus_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/phone_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="电话：   "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/phone_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/campus_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/phone_label_info"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="20dp"
            android:text="phone"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/contact_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/phone_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="发起聊天"/>

        <Button
            android:id="@+id/dial_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/contact_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:text="电话联系"/>

    </android.support.constraint.ConstraintLayout>



    <ProgressBar
        android:id="@+id/progress_info"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="visible"/>



</android.support.constraint.ConstraintLayout>