<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:text="注册账号"
                android:textSize="40sp"/>

            <ImageView
                android:id="@+id/photo_register"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/title_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:src="@mipmap/account"/>

            <TextView
                android:id="@+id/label_account_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/photo_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/account_register"
                android:layout_marginTop="20dp"
                android:text="         账号："
                android:textSize="16dp"
                android:gravity="center"/>
            
            <EditText
                android:id="@+id/account_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/photo_register"
                app:layout_constraintLeft_toRightOf="@id/label_account_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_password_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/account_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/password_register"
                android:layout_marginTop="20dp"
                android:text="         密码："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/password_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/account_register"
                app:layout_constraintLeft_toRightOf="@id/label_account_register"
                app:layout_constraintRight_toRightOf="parent"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_confirm_password_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/password_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/confirm_password_register"
                android:layout_marginTop="20dp"
                android:text="确认密码："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/confirm_password_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/password_register"
                app:layout_constraintLeft_toRightOf="@id/label_confirm_password_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_nickname_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/confirm_password_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/nickname_register"
                android:layout_marginTop="20dp"
                android:text="         昵称："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/nickname_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/confirm_password_register"
                app:layout_constraintLeft_toRightOf="@id/label_nickname_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_realname_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/nickname_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/realname_register"
                android:layout_marginTop="20dp"
                android:text="         姓名："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/realname_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/nickname_register"
                app:layout_constraintLeft_toRightOf="@id/label_realname_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_sex_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/realname_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/realname_register"
                android:layout_marginTop="20dp"
                android:text="         性别："
                android:textSize="16dp"
                android:gravity="center"/>

            <RadioGroup
                android:id="@+id/sex_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/realname_register"
                app:layout_constraintLeft_toRightOf="@id/label_sex_register"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <RadioButton
                    android:id="@+id/sex_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="男"/>

                <RadioButton
                    android:id="@+id/sex_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="女"/>

                <RadioButton
                    android:id="@+id/sex_secret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="保密"/>
            </RadioGroup>

            <TextView
                android:id="@+id/label_campus_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/sex_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/campus_register"
                android:layout_marginTop="20dp"
                android:text="         学校："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/campus_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/sex_register"
                app:layout_constraintLeft_toRightOf="@id/label_campus_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_studentid_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/campus_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/studentid_register"
                android:layout_marginTop="20dp"
                android:text="         学号："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/studentid_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/campus_register"
                app:layout_constraintLeft_toRightOf="@id/label_studentid_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_phone_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/studentid_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/phone_register"
                android:layout_marginTop="20dp"
                android:text="         电话："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/phone_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/studentid_register"
                app:layout_constraintLeft_toRightOf="@id/label_phone_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_question_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/phone_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/question_register"
                android:layout_marginTop="20dp"
                android:text="保密问题："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/question_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/phone_register"
                app:layout_constraintLeft_toRightOf="@id/label_question_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/label_answer_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/question_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/answer_register"
                android:layout_marginTop="20dp"
                android:text="         答案："
                android:textSize="16dp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/answer_register"
                android:layout_width="300dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/question_register"
                app:layout_constraintLeft_toRightOf="@id/label_question_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/back_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/answer_register"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/submit_register"
                android:layout_marginTop="20dp"
                android:text="返回"/>

            <Button
                android:id="@+id/submit_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/answer_register"
                app:layout_constraintLeft_toRightOf="@id/back_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:text="注册"/>

            <ProgressBar
                android:id="@+id/progress_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/answer_register"
                app:layout_constraintLeft_toRightOf="@id/back_register"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

        </android.support.constraint.ConstraintLayout>


    </ScrollView>

</LinearLayout>